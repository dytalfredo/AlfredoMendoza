---
// src/layouts/BaseLayout.astro
// Layout base con meta tags de OpenGraph configurables

interface Props {
    title: string;
    description: string;
    ogTitle?: string;
    ogDescription?: string;
    ogImage?: string;
    ogType?: string;
    ogUrl?: string;
    keywords?: string;
    author?: string;
}

const {
    title,
    description,
    ogTitle = title,
    ogDescription = description,
    ogImage = "/images/og-image.jpg",
    ogType = "website",
    ogUrl = Astro.url.href,
    keywords = "Desarrollador Web, Full Stack, Astro, React, Automatizaci√≥n, Negocios Digitales, Alfredo Mendoza",
    author = "Alfredo Mendoza",
} = Astro.props;

// Ensure absolute URL for OG image
const absoluteOgImage = ogImage.startsWith("http")
    ? ogImage
    : `${Astro.url.origin}${ogImage}`;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/images/favicon.webp" />
        <meta name="generator" content={Astro.generator} />

        <!-- SEO & Meta Tags -->
        <title>{title}</title>
        <meta name="description" content={description} />
        <meta name="keywords" content={keywords} />
        <meta name="author" content={author} />

        <!-- Open Graph (Facebook/LinkedIn) -->
        <meta property="og:title" content={ogTitle} />
        <meta property="og:description" content={ogDescription} />
        <meta property="og:type" content={ogType} />
        <meta property="og:url" content={ogUrl} />
        <meta property="og:image" content={absoluteOgImage} />
        <meta
            property="og:site_name"
            content="Alfredo Mendoza - Arquitecto Digital"
        />

        <!-- Twitter Card -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={ogTitle} />
        <meta name="twitter:description" content={ogDescription} />
        <meta name="twitter:image" content={absoluteOgImage} />

        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@100;300;400;600&family=Playfair+Display:ital,wght@0,400;0,700;1,400&display=swap"
            rel="stylesheet"
        />

        <!-- Global Styles -->
        <style is:global>
            html {
                scroll-padding-top: 80px;
                scroll-behavior: smooth;
            }
        </style>

        <!-- Slot for additional head content -->
        <slot name="head" />
    </head>
    <body>
        <slot />
    </body>
</html>
