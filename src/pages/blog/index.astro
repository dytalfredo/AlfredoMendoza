---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { StandaloneNavigation as Navigation } from "../../components/Navigation";
import Footer from "../../components/Footer";
import contentData from "../../data/content.json";
import "../../styles/global.css";

// Get projects data
const projectsData = contentData.projects;

// Blog metadata from JSON
const { title, description, ogTitle, ogDescription, ogImage, keywords } =
    contentData.pages.blog;
---

<BaseLayout
    title={title}
    description={description}
    ogTitle={ogTitle}
    ogDescription={ogDescription}
    ogImage={ogImage}
    ogUrl={`${Astro.url.origin}/blog`}
    keywords={keywords}
>
    {/* Navigation integrated via React Component */}
    <Navigation client:only="react" />

    <div class="min-h-screen pt-32 pb-20 px-6 md:px-20 max-w-7xl mx-auto">
        {/* Header */}
        <header class="mb-16 md:mb-24 text-center md:text-left">
            <span
                class="text-terracotta font-sans text-xs md:text-sm font-bold uppercase tracking-[0.2em] mb-4 block"
            >
                Pensamientos & Estrategias
            </span>
            <h1
                class="text-5xl md:text-8xl font-serif font-bold text-stone-900 mb-6 leading-tight"
            >
                El Blog.
            </h1>
            <p
                class="text-lg md:text-xl text-stone-600 max-w-2xl font-light leading-relaxed"
            >
                Reflexiones sobre tecnología, negocios y el arte de construir
                software que factura. Sin relleno.
            </p>
        </header>

        {/* Construction Notice */}
        <div class="mb-16 md:mb-24">
            <div
                class="bg-gradient-to-br from-stone-900 via-stone-800 to-stone-900 text-white rounded-2xl p-8 md:p-12 relative overflow-hidden border border-white/10"
            >
                {/* Background Pattern */}
                <div
                    class="absolute inset-0 opacity-5 bg-[url('https://grainy-gradients.vercel.app/noise.svg')]"
                >
                </div>

                {/* Content */}
                <div class="relative z-10">
                    <div class="flex items-center gap-3 mb-4">
                        <div
                            class="w-3 h-3 rounded-full bg-terracotta animate-pulse"
                        >
                        </div>
                        <span
                            class="text-terracotta text-xs md:text-sm font-bold uppercase tracking-[0.3em]"
                        >
                            En Construcción
                        </span>
                    </div>
                    <h2 class="text-2xl md:text-4xl font-serif font-bold mb-4">
                        Próximamente: Contenido de Valor
                    </h2>
                    <p
                        class="text-stone-300 text-base md:text-lg leading-relaxed max-w-3xl"
                    >
                        Esta sección está siendo preparada para artículos de
                        opinión, tutoriales prácticos e información actualizada
                        sobre desarrollo, estrategia digital y tecnología.
                        Mientras tanto, explora mis proyectos reales abajo para
                        ver cómo resuelvo problemas complejos.
                    </p>
                </div>
            </div>
        </div>

        {/* Projects Section */}
        <section>
            <div class="mb-12">
                <h2
                    class="text-3xl md:text-5xl font-serif font-bold text-stone-900 mb-4"
                >
                    Mis Proyectos
                </h2>
                <p class="text-stone-600 text-base md:text-lg">
                    Casos de estudio reales. Sin teoría vacía.
                </p>
            </div>

            {/* Projects Grid */}
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12">
                {
                    projectsData.map((project, index) => (
                        <a
                            href={`/work/${project.id}`}
                            class="group block bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 border border-stone-200 hover:border-terracotta"
                        >
                            {/* Project Image */}
                            <div class="relative aspect-video overflow-hidden bg-stone-900">
                                <img
                                    src={project.img}
                                    alt={project.title}
                                    class="w-full h-full object-cover grayscale group-hover:grayscale-0 group-hover:scale-105 transition-all duration-700"
                                />
                                <div class="absolute inset-0 bg-gradient-to-t from-stone-900/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500" />

                                {/* Hover CTA */}
                                <div class="absolute bottom-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity duration-500">
                                    <div class="flex items-center gap-2 bg-white text-stone-900 px-4 py-2 rounded-full text-xs font-bold uppercase tracking-wider">
                                        <span>Ver Caso</span>
                                        <svg
                                            class="w-4 h-4"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M17 8l4 4m0 0l-4 4m4-4H3"
                                            />
                                        </svg>
                                    </div>
                                </div>
                            </div>

                            {/* Project Info */}
                            <div class="p-6 md:p-8">
                                <div class="flex items-center gap-2 mb-3">
                                    <span class="text-terracotta text-xs font-mono font-bold">
                                        {String(index + 1).padStart(2, "0")}
                                    </span>
                                    <span class="text-stone-500 text-xs uppercase tracking-widest">
                                        {project.category}
                                    </span>
                                </div>

                                {project.technicalName && (
                                    <h4 class="text-stone-500 font-serif italic text-base md:text-lg mb-2">
                                        {project.technicalName}
                                    </h4>
                                )}

                                <h3 class="text-2xl md:text-3xl font-serif font-bold text-stone-900 mb-3 group-hover:text-terracotta transition-colors">
                                    {project.title}
                                </h3>

                                <p class="text-stone-600 text-sm md:text-base leading-relaxed line-clamp-3">
                                    {project.shortDesc}
                                </p>

                                {/* Tags */}
                                {project.story?.tech && (
                                    <div class="flex flex-wrap gap-2 mt-4">
                                        {project.story.tech
                                            .slice(0, 4)
                                            .map((tech) => (
                                                <span class="px-3 py-1 bg-stone-100 text-stone-700 text-xs rounded-full font-medium">
                                                    {tech}
                                                </span>
                                            ))}
                                    </div>
                                )}
                            </div>
                        </a>
                    ))
                }
            </div>
        </section>
    </div>

    <Footer />
</BaseLayout>
