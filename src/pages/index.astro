---
import BaseLayout from "../layouts/BaseLayout.astro";
import App from "../App";
import "../styles/global.css";
import contentData from "../data/content.json";

// Get site metadata
const siteTitle =
  "Alfredo Mendoza | Arquitecto Digital & Desarrollador Full Stack";
const siteDescription =
  "Transformo negocios en máquinas digitales autónomas. Desarrollo web de alto rendimiento, sistemas a medida y estrategias de automatización.";
---

<BaseLayout
  title={siteTitle}
  description={siteDescription}
  ogTitle="Alfredo Mendoza | Arquitecto Digital"
  ogDescription="Transformo negocios en máquinas digitales autónomas. No solo código, ingeniería de valor."
  ogImage="/images/og-image.jpg"
  ogUrl={Astro.url.origin}
>
  <!-- Main App Wrapper (Client-side usage) -->
  <App client:only="react" />
</BaseLayout>
