---
import BaseLayout from "../layouts/BaseLayout.astro";
import App from "../App";
import "../styles/global.css";
import contentData from "../data/content.json";

// Get site metadata from JSON
const { title, description, ogTitle, ogDescription, ogImage, keywords } =
  contentData.pages.home;
---

<BaseLayout
  title={title}
  description={description}
  ogTitle={ogTitle}
  ogDescription={ogDescription}
  ogImage={ogImage}
  ogUrl={Astro.url.origin}
  keywords={keywords}
>
  <!-- Main App Wrapper (Client-side usage) -->
  <App client:only="react" />
</BaseLayout>
